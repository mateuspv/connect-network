<div class="search-result">
  <h1 class="page-title">Results</h1>

  <ul>
  {{#each model.user_facebook as |user|}}
    <li class="search-result-item">{{profile-card user=user network="facebook" description=user.description}}</li>
  {{/each}}
  </ul>

  <ul>
  {{#each model.user_twitter as |user|}}
    <li class="search-result-item">{{profile-card user=user network="twitter" description=user.bio}}</li>
  {{/each}}
  </ul>

  <ul>
  {{#each model.page_facebook as |page|}}
    <li class="search-result-item">{{profile-card user=page network="facebook" description=user.about}}</li>
  {{/each}}
  </ul>

  <ul>
  {{#each model.group_facebook as |group|}}
    <li class="search-result-item">{{group-facebook group=group}}</li>
  {{/each}}
  </ul>

  <ul>
  {{#each model.post_twitter as |post|}}
    {{post-twitter post=post retweet="true"}}
  {{/each}}
  </ul>
{{outlet}}
</div>