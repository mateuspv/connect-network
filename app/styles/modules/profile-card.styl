.profile-card
  position relative
  min-height 110px
  padding-top 10px
  padding-bottom 14px
  border-top-left-radius 3px
  border-top-right-radius 3px
  border-bottom 4px solid $color-connect
  background-size 100%

  &-photo
    display block
    size 50px 55px
    margin 0 auto 11px auto
    border 3px solid #fff
    border-radius 100%
    box-shadow 0 1px 1px rgba(0,0,0,0.3)
    background-size cover

  &-name
    display block
    text-align center
    color #FFF
    text-shadow 1px 1px 1px rgba(0,0,0,0.8)
    font-size 130%
    margin-bottom 5px

  &-screenname
    text-align center
    margin-bottom 5px
    color #FFF
    text-shadow 1px 1px 1px rgba(0,0,0,0.8)

  &-description
    padding-left 30px
    padding-right 30px
    margin-bottom 10px
    text-align center
    color #FFF
    text-shadow 1px 1px 1px rgba(0,0,0,0.8)

  &-overlayer
    @extend $striped-background
    position absolute
    z-index 1
    size 100% 100%
    top 0
    border-top-left-radius 3px
    border-top-right-radius 3px

  &-network
    lateral-absolute-center()
    position absolute
    top 48px
    z-index 2
    width 13px
    line-height 1.2

  &-container
    position relative
    z-index 2

  &.facebook
    background-color $color-facebook

  &.twitter
    background-color $color-twitter


.group-facebook
  @extend .profile-card
  border-bottom-color $color-facebook-dark

  &-network
    bottom 0
    right 10px
    top auto
    left auto

  &-icon
    position absolute
    bottom 0
    right 30px
