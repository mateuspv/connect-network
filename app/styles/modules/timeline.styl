/**
 --------------------------------------------------
    Timeline
    .timeline
        @post
 --------------------------------------------------
 */


.timeline
  margin 0 auto
  .post-form
    clearfix()
    margin-top 30px
    padding-bottom 15px
    border-bottom 1px solid $light-silver

  +above(600px)
    width 588px

  &-container
    padding 75px 30px 0 30px

  > li
    border-bottom 1px solid $light-silver

    &:last-child
      border-bottom none
