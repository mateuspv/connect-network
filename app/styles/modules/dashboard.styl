.black-mask
  display none
  absolute 0 0
  size 100% 100%
  z-index 5
  background rgba(0,0,0,0.6)

.sidebar
  border-right 3px solid $color-connect
  .twitter-info
    border-top 3px solid $color-connect
    border-bottom 3px solid $color-connect

  &-container
    position fixed
    z-index 4
    top 62px
    left -260px
    width 260px
    height 100%
    color #FFF
    background #f2f6f9
    border-right 3px solid $color-connect-dark
    transition left 0.3s ease-in-out

    .twitter-info
      margin-bottom 5px

    &::after
      display none

    +above($desktop)
      left 0

.site
  &-container
    padding-top 62px
    height 100%
    width 100%
    transition-property transform
    transition-duration 0.4s
    &.active
      .black-mask
        display block
      overflow hidden
      .site-main-container
        transform translate3d(260px, 0, 0)
      .sidebar-container
        left 0
        visibility visible

  &-main-container
    float right
    width 100%
    height 100%
    overflow auto
    transition-property top, bottom
    transition-duration 0.2s, 0.2s
    transition-timing-function linear, linear
    overflow-scrolling touch
    transition all 0.5s
    background-color #FFF


.dashboard
  hr
    background-color #e1e8ed
    height 1px
    outline none
    border none

  &-filter-container
    width 100%
    padding 0 9px
    margin-bottom 17px

  &-filter
    @extend $input-style
    color #878787
    height 30px
    width 233px
    text-indent 10px

  &-filters
    font-size 13px

    .tag-list
      padding 0 9px

    .tag-list-title
      padding-left 14px
      padding-top 20px
