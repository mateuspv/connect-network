$profile-user-information-height = 195px
$profile-user-cover-top = 62px

.profile
  &-cover
    background url("") no-repeat center center fixed
    background-size cover
    top $profile-user-cover-top
    position absolute
    width 100%
    height 196px
    z-index 1
    border-bottom 1px solid $light-silver

    &.facebook
      background-color $color-facebook-dark

    &.twitter
      background-color $color-twitter-dark

  &-cover-overlayer
    @extend $striped-background
    position absolute
    top $profile-user-cover-top
    z-index 2
    width 100%
    height $profile-user-information-height

  &-user
    position relative
    z-index 2
    padding-top 17px
    margin-bottom 40px

    &-image
      center(max_width = 120px)
      border-radius 100%
      border 3px solid #fff
      box-shadow 0 1px 1px rgba(0,0,0,0.3)

    &-information
      height $profile-user-information-height

    &-name
      text-align center
      font-size 45px
      color #FFF
      margin-bottom 10px

    &-description
      width percent(700px, 1366px)
      margin 8px auto 20px auto
      font-style italic
      text-align center
      color rgba(0, 0, 0, 0.6)
      font-size 18px

  &-btn
    center(max_width = 120px)
    color #FFF
    height 44px
    line-height 44px
    text-align center
    font-size 15px
    border-radius 999em
    padding 0 18px
    transition box-shadow .2s ease-in-out

    &.twitter
      background $color-twitter
      box-shadow 0 4px 0 $color-twitter-dark, 0 15px 20px rgba(0, 0, 0, 0.35)

    &.facebook
      background $color-facebook
      box-shadow 0 4px 0 $color-facebook-dark, 0 15px 20px rgba(0, 0, 0, 0.35)

    &:hover
      transform translate(0, 4px)

  &-info
    clearfix()
    center(max_width = 360px)
    margin-bottom 30px

    &-item
      column(1/3)
      text-align center
      float left
      &-container
        padding 10px 20px 5px

    &-title
      margin-bottom 3px
      text-transform uppercase
      font-size 11px
      color rgba(0, 0, 0, 0.6)

    &-value
      font-size 24px
      color rgba(0,0,0,0.8)

