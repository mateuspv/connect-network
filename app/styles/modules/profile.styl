.profile
  &-cover
    background url("") no-repeat center center fixed
    background-size cover
    top 62px
    position absolute
    width 100%
    height 196px
    z-index 1
    border-bottom 1px solid $light-silver
  &-user
    height 195px
    position relative
    z-index 2
    padding-top 38px
    margin-bottom 40px

    &-image
      center(max_width = 120px)
      border-radius 100%
      border 3px solid #fff
      box-shadow 0 1px 1px rgba(0,0,0,0.3)

    &-name
      text-align center
      font-size 50px
      color rgba(0, 0, 0, 0.8)

    &-description
      width percent(700px, 1366px)
      margin 8px auto 20px auto
      font-style italic
      text-align center
      color rgba(0, 0, 0, 0.6)
      font-size 18px
  &-btn
    center(max_width = 120px)
    color #FFF
    height 44px
    line-height 44px
    text-align center
    font-size 15px
    border-radius 999em
    padding 0 18px
    &.twitter
      background $color-twitter
    &.facebook
      background $color-facebook

  &-info
    clearfix()
    center(max_width = 360px)
    margin-bottom 30px

    &-item
      column(1/3)
      text-align center
      float left
      &-container
        padding 10px 20px 5px

    &-title
      margin-bottom 3px
      text-transform uppercase
      font-size 11px
      color rgba(0, 0, 0, 0.6)

    &-value
      font-size 24px
      color rgba(0,0,0,0.8)

