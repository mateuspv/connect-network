$btn-connect
  width 200px
  margin-right 20px
  display inline-block
  padding 1rem 1.5rem
  text-align center
  text-decoration none
  border-radius 3px
  font-size 17.5px
  font-weight 700
  color #FFF

.btn-connect
  &-icon
    width 13px

  &-twitter
    @extend $btn-connect
    background-image linear-gradient(0, #0081ce, #00aced)
    border 1px solid #0081ce
    &:hover
      background-image linear-gradient(0, #00aced, #0081ce)

  &-facebook
    @extend $btn-connect
    background-image linear-gradient(0, #2b4170, #3b5998);
    border 1px solid #2b4170;
    text-shadow 0 -1px -1px #1f2f52
    &:hover
      background-image linear-gradient(0, #3b5998, #2b4170)
