.search
  margin-top 50px
  center(max_width = 360px)
  +above($tablet)
    uncenter()
    margin-left 300px
    max-width 50%

  &-label
    display none

  &-submit
    float right
    margin-top 5px
    @extend $submit-btn

  &-input
    width 92%
    border none
    font-size 50px
    font-family $font-primary
    font-weight 100
    color rgba(0, 0, 0, 0.6)
    +placeholder()
      color rgba(0, 0, 0, 0.6)
    &:focus
      outline none
      border-color #66AFE9
      border-bottom 1px solid #EEE
