.search
  &-label
    display none

  &-submit
    float right
    margin-top 5px
    @extend $submit-btn

  &-input
    width 92%
    border none
    font-size 25px
    font-family $font-primary
    font-weight 100
    margin-bottom 20px
    color rgba(0, 0, 0, 0.6)
    border-bottom 1px solid #EEE
    +placeholder()
      color rgba(0, 0, 0, 0.6)
    &:focus
      outline none
      border-color #66AFE9
      border-bottom 1px solid #EEE

  &-option-network
    float left
    margin-right 30px
    &-button
      @extend $button
      width auto
      margin-bottom 7px
