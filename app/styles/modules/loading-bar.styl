@keyframes shift-rightwards
  0%
    transform translateX(-100%)
  40%
      transform translateX(0)
  60%
    transform translateX(0)
  100%
    transform translateX(100%)

.loading-bar
  z-index 5
  position fixed
  left 0
  top 58px
  width 100%
  height 4px
  background #FFF
  transform translateX(100%)
  animation shift-rightwards 1s ease-in-out infinite
  animation-delay .4s
  &.facebook
    background-color $color-facebook

  &.twitter
    background-color $color-twitter
