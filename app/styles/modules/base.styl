/**
  VARIABLES
*/
$blue = #1E88E2
$light-blue = #b7d8f6
$light-silver = #e1e8ed

$facebook-color = #3b5998
$twitter-color = #55acee

$color-twitter = #55acee
$color-facebook = #3b5998
$color-connect = #1E88E2

$tablet = 1024px
$min-width = 240px;
$desktop = 1164px
$font-primary = 'Lato', sans-serif
$font-size = 16px


/*
  GLOBAL PLACEHOLDERS
*/

$effect-input-focus
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  &:hover,
  &:focus
    box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
    border-color $color-connect

$effect-button-focus
  &:hover,
  &.active
    color $color-connect
    border-color $color-connect
    background $light-blue


$input-style
  @extend $effect-input-focus
  border-radius 4px
  border 1px solid $light-blue
  background-color #FAFAFA
  outline none

$button
  @extend $effect-button-focus
  display block
  padding 6px 10px
  width 90%
  text-align center
  border-radius 3px
  border 1px solid #D0D3D5
  color #737C82
  transition-duration 0.3s
  transition-property color, background-color

  &:first-letter
    text-transform uppercase
