.user-friend
	&-list
		center(50%)

	&-item
		position relative
		float left
		margin-bottom 20px
		size 100px 100px
		line-height 1.5
	
	&-image-link
		lateral-margin-auto()
		size 54px 54px
		display block
		margin-bottom 5px

	&-image		
		@extend $profile-user-image
	
	&-name
		lateral-margin-auto()
		display block
		width 80%
		font-size 12px
		text-align center
	
	&-network
		lateral-absolute-center()
		position absolute
		top 47px
		z-index 2
		width 13px
		line-height 1.2