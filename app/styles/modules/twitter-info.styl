.twitter-info
  &-list
    clearfix()
    padding 7px 0
    font-size 10px
    color #919191
    text-align center
    border-top 1px solid $light-silver
    border-bottom 1px solid $light-silver

  &-description
    padding 14px
    font-style italic
    text-align center
    font-family serif
    border-top 1px solid $light-silver
    color #3A3A3A

  &-item
    text-transform uppercase
    span(1/3)

  &-value
    margin-top 2px
    display block
