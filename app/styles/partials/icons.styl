$icon-base
  cursor pointer
  background-image url('../images/sprite.png')
  display inline-block

$icon
  @extend $icon-base
  width 22px
  height 22px

.icon-search
  @extend $icon-base
  width 18px
  height 19px
  background-position 0 0

.icon-hamburger
  @extend $icon
  background-position -44px 0
  width 16px
  height 15px

.icon-reply
  @extend $icon
  width 15px
  height 10px
  background-position -62px -2px
  &.active,
  &:hover
    background-position -78px -2px

.icon-favorite
  @extend $icon
  width 14px
  height 14px
  background-position -95px 0
  &.active,
  &:hover
    background-position -127px 0

.icon-retweet
  @extend $icon
  width 19px
  height 11px
  background-position -142px -2px
  &.active,
  &:hover
    background-position -180px -2px
