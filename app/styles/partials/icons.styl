$icon-base
  cursor pointer
  background-image url('../images/sprite.png')
  display inline-block

$icon
  @extend $icon-base
  width 22px
  height 22px

.icon-search
  @extend $icon-base
  width 18px
  height 19px
  background-position 0 0

.icon-search-active
  @extend .icon-search
  background-position -201px 0

.icon-hamburger
  @extend $icon
  background-position -44px 0
  width 16px
  height 15px

.icon-reply
  @extend $icon
  width 15px
  height 10px
  background-position -62px -2px
  &.active,
  &:hover
    background-position -78px -2px

.icon-favorite
  @extend $icon
  width 14px
  height 14px
  background-position -95px 0
  &.active,
  &:hover
    background-position -127px 0

.icon-retweet
  @extend $icon
  width 19px
  height 11px
  background-position -142px -2px
  &.active,
  &:hover
    background-position -180px -2px

.icon-profile
  @extend $icon
  width 31px
  background-position -226px 0

.icon-plus
  @extend $icon
  width 22px
  height 22px
  background-position -260px 0

.icon-home
  @extend $icon
  width 28px
  height 24px
  background-position -286px 0

.icon-notifications
  @extend $icon
  width 28px
  height 25px
  background-position -317px 0

.icon-facebook
  @extend $icon
  width 10px
  height 21px
  background-position -128px -32px
  &.active
    background-position -50px -32px

.icon-twitter
  @extend $icon
  width 32px
  height 22px
  background-position -80px -32px
  &.active
    background-position -1px -32px


