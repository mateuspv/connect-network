$button-authentication
  width 200px
  margin-right 20px
  display inline-block
  padding 1rem 1.5rem
  text-align center
  text-decoration none
  border-radius 3px
  font-size 17.5px
  font-weight 700
  color #FFF
  +below(510px)
    width 110px
    float left
    font-size 12px
    padding 15px

button-authentication(color, color-contrast)
  @extend $button-authentication
  background-image linear-gradient(0, color, color-contrast)
  border 1px solid color
  &:hover
    background-image linear-gradient(0, color-contrast, color)


.btn-authentication
  &-icon
    width 13px

  &-twitter
    button-authentication($color-twitter-dark, $color-twitter)


  &-facebook
    button-authentication($color-facebook-dark, $color-facebook)
