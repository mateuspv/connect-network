normalize()

*
  box-sizing border-box

body,
html
  height 100%

body
  overflow-y scroll
  font-family $font-primary
  > .ember-view
    height 100%

a
  color inherit
  font-family inherit
  text-decoration none

h1,
h2,
h3,
h4,
h5,
h6
  font-size inherit
  margin 0

p
	margin 0

ul
  list-style none
  padding 0
  margin 0

button
  border none
  padding 0
  background none
  &:focus
      outline none

iframe
  border none
