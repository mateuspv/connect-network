/**
  variables & useful stuff
 */

/**
  VARIABLES
*/

/**
  COLORS
*/
$blue = #1E88E2
$light-blue = #b7d8f6
$light-silver = #e1e8ed

/**
  COLORS - Social networks
*/
$color-twitter = #55acee
$color-twitter-dark = #1D76AB
$color-facebook = #3b5998
$color-facebook-dark = #2B4170
$color-googleplus = #d73d32
$color-googleplus-dark = #E42214
$color-connect = #1E88E2
$color-connect-dark = #1E88E2

$tablet = 1024px
$min-width = 240px;
$desktop = 1164px
$font-primary = 'Lato', sans-serif
$font-size = 16px

/**
  Usefull
*/
$striped-background
  background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAACCAYAAABytg0kAAAAEUlEQVQIW2NgYGD4z4AE/gMADwMB/3hb+igAAAAASUVORK5CYII=') center center fixed rgba(0, 0, 0, 0.5)

$profile-user-image
  border-radius 100%
  border 3px solid #fff
  box-shadow 0 1px 1px rgba(0,0,0,0.3)

/**
  Helpers
*/
lateral-margin-auto()
  margin-left auto
  margin-right auto

lateral-absolute-center()
  lateral-margin-auto()
  left 0
  right 0

/*
  GLOBAL PLACEHOLDERS
*/

$effect-input-focus
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  &:hover,
  &:focus
    box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
    border-color $color-connect

$effect-button-focus
  &:hover,
  &.active
    color $color-connect
    border-color $color-connect
    background $light-blue


$input-style
  @extend $effect-input-focus
  border-radius 4px
  border 1px solid $light-blue
  background-color #FAFAFA
  outline none

$button
  @extend $effect-button-focus
  display block
  padding 6px 10px
  width 90%
  text-align center
  border-radius 3px
  transition-duration 0.3s
  transition-property color, background-color
  font-size 12px
  border 1px solid 1px solid rgba(198, 219, 243, 0.2)
  background rgba(30, 114, 226, 0.2)
  color $color-connect

  &:first-letter
    text-transform uppercase

$submit-btn
  padding 9px
  background-color $color-connect-dark
  color #FFF
  border-radius 3px
