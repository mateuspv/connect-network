$absolute-background
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.no-auth-image
  @extend $absolute-background
  z-index 1
  background url('../images/background-home-2.jpg') no-repeat center 0 fixed
  background-size cover

.no-auth-overlayer
  @extend $striped-background
  @extend $absolute-background
  z-index 2

.page
  &-container
    center(780px, pad = 30px)
    padding-top 30px;
    position relative
    z-index 3
    color #FFF

  &-login-title
    font-size 8vh
    font-weight 600

  &-login-text
    width 80%
    font-size 5vh
    margin-bottom 35px
    +below(510px)
      font-size 4vh

